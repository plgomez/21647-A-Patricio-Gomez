<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Foro de novedades</title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    </head>
    <body>
        <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Mensajes en el Foro</h5>
    
                <a type="button" class="btn btn-success" href="agregar">
                    Postear un tema Nuevo!
                </a>
                <br />
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Titulo</th>
                            <th scope="col">Mensaje</th>
                            <th scope="col">Imagen</th>
                            <th scope="col">Editar</th>
                            <th scope="col">Eliminar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% posts.forEach((item) => { %>
                            <tr>
                                <th scope="row"><%= item.id %></th>
                                <td><%= item.titulo %></td>
                                <td><%= item.descripcion %></td>
                                <td><%= item.imagen %></td>
                                <td>
                                    <a type="button" class="btn btn-primary" href="/editar/<%= item.id %>">
                                        Editar
                                    </a>
                                </td>
                                <td>
                                    <a type="button" class="btn btn-danger" href="/eliminar/<%= item.id %>">
                                        Eliminar
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
                <script src="" async defer></script>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    </body>
</html>